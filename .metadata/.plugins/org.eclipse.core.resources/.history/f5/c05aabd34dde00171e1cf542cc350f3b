package back14723;

import java.util.Scanner;

public class Main {
	public static void main(String args[]) {
		Scanner in  =new Scanner(System.in);
		int N = in.nextInt();
		int start = 1;
		int d = 1;
		int st[] = new int[45];
		while ( true) {
			start = start+d;
			d++;
			if ( start > 1000) {
				break;
			}
			st[d-1] = start;
		}
		
		/*for ( int i = 0 ; i<45 ; i++) {
			System.out.println(st[i]+" "+i);
		}*/
		
		int cnt = 1;
		while ( true) {
			if ( N >= st[cnt] && N < st[cnt+1] ) {
				break;
			}
			cnt++;
		}
		System.out.println(cnt)
		
	}
}
