package back14501;

import java.util.Scanner;

public class Main {
	public static void main(String args[]) {
		Scanner in = new Scanner(System.in);
		int N = in.nextInt();
		int t[] = new int[N+1];
		int p[] = new int[N+1];
		int dp[] = new int[N+1];
		
		for (int i = 1 ; i <= N ; i++) {
			t[i] = in.nextInt();
			p[i] = in.nextInt();
			dp[i] += p[i];
		}
		
		for ( int i = 1 ; i <=N ; i++) {
			for ( int j = i ; j <= N ; j++) {
				
					dp[i] += p[j];
					j += t[j];
				
			}
		}
		
		for ( int i = 1 ; i <= N ; i++) {
			System.out.print(dp[i]+" ");
		}
		
	}
}
