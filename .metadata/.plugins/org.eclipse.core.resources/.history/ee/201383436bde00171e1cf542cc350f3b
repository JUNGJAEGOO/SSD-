package back14501;

import java.util.Scanner;

public class Main {
	static int t[];
	static int p[];
	static int N;
	public static void main(String args[]) {
		Scanner in = new Scanner(System.in);
		N = in.nextInt();
		t = new int[N+1];
		p = new int[N+1];

		
		for (int i = 1 ; i <= N ; i++) {
			t[i] = in.nextInt();
			p[i] = in.nextInt();
		}
		
		/*for ( int i = 1 ; i <= N ; i++) {
			back(i,i,p[i]);
		}*/
		back(1,1,10);

	}
	
	public static void back(int start,int len,int sum) {
		if ( len == N) {
			
			System.out.println(sum);
		}else {
			for ( int i = start+1 ; i <= N ; i++ ) {
				if ( len + i-len+t[i] <= N) {
					back(i,len+t[i],sum+p[i]);
				}
			}
		}
	}
}
