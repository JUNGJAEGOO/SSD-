package back14723;

import java.util.Scanner;

public class Main {
	public static void main(String args[]) {
		Scanner in  =new Scanner(System.in);
		int N = in.nextInt();
		int start = 1;
		int d = 1;
		int st[] = new int[46];
		while ( true) {
			start = start+d;
			d++;
			if ( start > 1000) {
				st[d-1] = start;
				break;
			}
			st[d-1] = start;
		}
		st[0] = 1;
/*		for ( int i = 0 ; i<46 ; i++) {
			System.out.println(st[i]+" "+i);
		}*/
		
		int dp[] = new int[1001];
		if ( N == 1) {
			System.out.println(1+" "+1);
			return;
		}
		
		int cnt = 1;
		while ( true) {
			if ( N >= st[cnt] && N < st[cnt+1] ) {
				break;
			}
			cnt++;
		}
		System.out.println(cnt);
		System.out.println(st[cnt-1]);
		
	}
}
